{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Retrieve Undertaking API response",
  "description": "SCP04 Retrieve Undertaking Response Schema",
  "type": "object",
  "minProperties": 1,
  "maxProperties": 1,
  "properties": {
    "retrieveUndertakingResponse": {
      "$ref": "#/definitions/retrieveUndertakingResponseType"
    }
  },
  "required": [
    "retrieveUndertakingResponse"
  ],
  "additionalProperties": false,
  "definitions": {
    "returnParameters": {
      "type": "object",
      "properties": {
        "paramName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "enum": [
            "ERRORCODE",
            "ERRORTEXT"
          ]
        },
        "paramValue": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "paramName",
        "paramValue"
      ],
      "additionalProperties": false
    },
    "undertakingBusinessEntity": {
      "type": "object",
      "properties": {
        "businessEntityIdentifier": {
          "type": "string",
          "minLength": 1,
          "maxLength": 17
        },
        "address": {
          "type": "object",
          "properties": {
            "addressLine1": {
              "type": "string",
              "minLength": 1,
              "maxLength": 40
            },
            "addressLine2": {
              "type": "string",
              "maxLength": 40
            },
            "addressLine3": {
              "type": "string",
              "maxLength": 40
            },
            "postcode": {
              "type": "string",
              "maxLength": 10
            },
            "countryCode": {
              "type": "string",
              "minLength": 2,
              "maxLength": 2
            }
          },
          "required": [
            "addressLine1",
            "countryCode"
          ],
          "additionalProperties": false
        },
        "leadEORI": {
          "type": "boolean"
        },
        "contacts": {
          "type": "object",
          "properties": {
            "phone": {
              "type": "string",
              "maxLength": 24
            },
            "mobile": {
              "type": "string",
              "maxLength": 24
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "businessEntityIdentifier",
        "leadEORI"
      ],
      "additionalProperties": false
    },
    "retrieveUndertakingResponseType": {
      "description": "Root",
      "type": "object",
      "properties": {
        "responseCommon": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "minLength": 1,
              "maxLength": 6,
              "enum": [
                "OK",
                "NOT_OK"
              ]
            },
            "statusText": {
              "type": "string",
              "maxLength": 100
            },
            "processingDate": {
              "description": "The date and time the message was processed",
              "type": "string",
              "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z"
            },
            "returnParameters": {
              "description": "This will be populated if status is NOT_OK",
              "type": "array",
              "minItems": 0,
              "items": {
                "$ref": "#/definitions/returnParameters"
              }
            }
          },
          "required": [
            "status",
            "processingDate"
          ],
          "additionalProperties": false
        },
        "responseDetail": {
          "type": "object",
          "properties": {
            "undertakingReference": {
              "type": "string",
              "minLength": 1,
              "maxLength": 17
            },
            "undertakingName": {
              "type": "string",
              "minLength": 1,
              "maxLength": 105
            },
            "industrySector": {
              "type": "string",
              "enum": [
                "0",
                "1",
                "2",
                "3"
              ]
            },
            "industrySectorLimit": {
              "type": "number",
              "maximum": 99999999999.99,
              "multipleOf": 0.01
            },
            "lastSubsidyUsageUpdt": {
              "description": "Date of last non-HMRC subsidy allocation usage update",
              "type": "string",
              "pattern": "^(20|21)\\d\\d[-/.](0[1-9]|1[012])[-/.](0[1-9]|[12][0-9]|3[01])$"
            },
            "undertakingStatus": {
              "type": "number",
              "enum": [
                0,
                1,
                5,
                8,
                9
              ]
            },
            "undertakingBusinessEntity": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "#/definitions/undertakingBusinessEntity"
              }
            }
          },
          "required": [
            "undertakingReference",
            "undertakingName",
            "industrySector",
            "industrySectorLimit",
            "lastSubsidyUsageUpdt",
            "undertakingStatus",
            "undertakingBusinessEntity"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "responseCommon"
      ],
      "additionalProperties": false
    }
  }
}