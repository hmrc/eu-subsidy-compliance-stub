{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Retrieve Undertaking API request",
  "description": "SCP04 JSON Request Schema",
  "type": "object",
  "minProperties": 1,
  "maxProperties": 1,
  "properties": {
    "retrieveUndertakingRequest": {
      "$ref": "#/definitions/retrieveUndertakingRequestType"
    }
  },
  "required": [
    "retrieveUndertakingRequest"
  ],
  "additionalProperties": false,
  "definitions": {
    "receiptDate": {
      "description": "The date and time the message was created by the system sending the message.",
      "type": "string",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z"
    },
    "industrySector": {
      "type": "string",
      "minLength": 0,
      "maxLength": 5
    },
    "idType": {
      "description": "Type of Identification e.g. EORI",
      "type": "string",
      "minLength": 4,
      "maxLength": 6,
      "enum": [
        "UTID",
        "EORI"
      ]
    },
    "idValue": {
      "description": "identification number e.g. UTID or EORI number",
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "requestCommon": {
      "description": "Transaction Header",
      "type": "object",
      "properties": {
        "originatingSystem": {
          "description": "The name or IP address of the application system that originally submitted the message.",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "receiptDate": {
          "$ref": "#/definitions/receiptDate"
        },
        "acknowledgementReference": {
          "description": "Unique id created at Originating System for example MDTP. Unique ID throughout the journey of a message -- stored in the ETMP system for search and retrieval purposes",
          "type": "string",
          "minLength": 32,
          "maxLength": 32
        },
        "messageTypes": {
          "type": "object",
          "properties": {
            "messageType": {
              "description": "Type of message - must be \"RetrieveUndertaking\"",
              "type": "string",
              "minLength": 1,
              "maxLength": 30,
              "enum": [
                "RetrieveUndertaking"
              ]
            }
          },
          "required": [
            "messageType"
          ],
          "additionalProperties": false
        },
        "requestParameters": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/requestParameters"
          }
        }
      },
      "required": [
        "originatingSystem",
        "receiptDate",
        "acknowledgementReference",
        "messageTypes",
        "requestParameters"
      ],
      "additionalProperties": false
    },
    "requestDetail": {
      "description": "Transaction Body",
      "type": "object",
      "properties": {
        "idType": {
          "$ref": "#/definitions/idType"
        },
        "idValue": {
          "$ref": "#/definitions/idValue"
        }
      },
      "required": [
        "idType",
        "idValue"
      ],
      "additionalProperties": false
    },
    "retrieveUndertakingRequestType": {
      "description": "Root",
      "type": "object",
      "properties": {
        "requestCommon": {
          "$ref": "#/definitions/requestCommon"
        },
        "requestDetail": {
          "$ref": "#/definitions/requestDetail"
        }
      },
      "required": [
        "requestCommon",
        "requestDetail"
      ],
      "additionalProperties": false
    },
    "requestParameters": {
      "type": "object",
      "properties": {
        "paramName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "enum": [
            "REGIME"
          ]
        },
        "paramValue": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "paramName",
        "paramValue"
      ],
      "additionalProperties": false
    }
  }
}