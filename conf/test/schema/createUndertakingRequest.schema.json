{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Create Undertaking API Request",
  "description": "SCP02 JSON Request Schema",
  "type": "object",
  "minProperties": 1,
  "maxProperties": 1,
  "properties": {
    "createUndertakingRequest": {
      "$ref": "#/definitions/createUndertakingRequest"
    }
  },
  "required": [
    "createUndertakingRequest"
  ],
  "additionalProperties": false,
  "definitions": {
    "receiptDate": {
      "description": "The date and time the message was created by the system sending the message.",
      "type": "string",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z"
    },
    "industrySector": {
      "type": "string",
      "minLength": 5,
      "maxLength": 5
    },
    "idType": {
      "description": "Type of Identification e.g. EORI",
      "type": "string",
      "minLength": 4,
      "maxLength": 6
    },
    "id": {
      "description": "identification number e.g. EORI number",
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "undertakingName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 105
    },
    "requestCommon": {
      "description": "Transaction Header",
      "type": "object",
      "properties": {
        "originatingSystem": {
          "description": "The name or IP address of the application system that originally submitted the message.",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "receiptDate": {
          "$ref": "#/definitions/receiptDate"
        },
        "acknowledgementReference": {
          "description": "Unique id created at Originating System for example MDTP. Unique ID throughout the journey of a message -- stored in the ETMP system for search and retrieval purposes",
          "type": "string",
          "minLength": 32,
          "maxLength": 32
        },
        "messageTypes": {
          "type": "object",
          "properties": {
            "messageType": {
              "description": "Type of message - must be \"CreateNewUndertaking\"",
              "type": "string",
              "minLength": 1,
              "maxLength": 30,
              "enum": [
                "CreateNewUndertaking"
              ]
            }
          },
          "required": [
            "messageType"
          ],
          "additionalProperties": false
        },
        "requestParameters": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/requestParameters"
          }
        }
      },
      "required": [
        "originatingSystem",
        "receiptDate",
        "acknowledgementReference",
        "messageTypes",
        "requestParameters"
      ],
      "additionalProperties": false
    },
    "requestDetail": {
      "description": "Transaction Body",
      "type": "object",
      "properties": {
        "undertakingName": {
          "$ref": "#/definitions/undertakingName"
        },
        "industrySector": {
          "$ref": "#/definitions/industrySector"
        },
        "businessEntity": {
          "$ref": "#/definitions/businessEntity"
        },
        "undertakingStartDate": {
          "type": "string",
          "pattern": "^((19|2[0-9])[0-9]{2})-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$"
        }
      },
      "required": [
        "undertakingName",
        "industrySector",
        "businessEntity",
        "undertakingStartDate"
      ],
      "additionalProperties": false
    },
    "createUndertakingRequest": {
      "description": "Root",
      "type": "object",
      "properties": {
        "requestCommon": {
          "$ref": "#/definitions/requestCommon"
        },
        "requestDetail": {
          "$ref": "#/definitions/requestDetail"
        }
      },
      "required": [
        "requestCommon",
        "requestDetail"
      ],
      "additionalProperties": false
    },
    "address": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "type": "string",
          "minLength": 1,
          "maxLength": 40
        },
        "addressLine2": {
          "type": "string",
          "maxLength": 40
        },
        "addressLine3": {
          "type": "string",
          "maxLength": 40
        },
        "postCode": {
          "description": "Mandatory for Country Code GB and Channel Islands",
          "type": "string",
          "maxLength": 10
        },
        "countryCode": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2
        }
      },
      "required": [
        "addressLine1",
        "countryCode"
      ],
      "additionalProperties": false
    },
    "contacts": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string",
          "maxLength": 24
        },
        "mobile": {
          "type": "string",
          "maxLength": 24
        }
      },
      "additionalProperties": false
    },
    "requestParameters": {
      "type": "object",
      "properties": {
        "paramName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "enum": [
            "REGIME"
          ]
        },
        "paramValue": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "paramName",
        "paramValue"
      ],
      "additionalProperties": false
    },
    "businessEntity": {
      "type": "object",
      "properties": {
        "idType": {
          "$ref": "#/definitions/idType"
        },
        "idValue": {
          "$ref": "#/definitions/id"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "contacts": {
          "$ref": "#/definitions/contacts"
        }
      },
      "required": [
        "idType",
        "idValue"
      ],
      "additionalProperties": false
    }
  }
}